/*
Scaffolding Configuration Settings
*/

pipeline {
    agent any

    stages {
        stage('Stage1_<your student id>') {
            echo “S1_<your student id> : Environment Preparation Completed”
        }
		
		stage('Stage2_<your student id>') {
            docker run -d -p 4200:8800 container_name
			docker rm container_name
			docker run -it -p 42000:8080 -–name=container_name ubuntu:18.04 /bin/sh
        }
		
		parallel{
			stage('Stage3_<your student id>'){
				echo “S3_<your student_id> : API Test Completed”
			}
			
			stage('Stage4_<your student id>'){
				echo “S4_<your student_id> : DAST Security Test Completed”
			}
		}
        
		stage('Stage5_<your student id>') {
            echo “Prompt: Do you want to release the work?”
        }
		
        stage('Stage6_<your student id>') {
            steps {
                script {
                    if Proceed {
                        echo “Work Released - <your student id>”
                    } else {
                        Abort
                    }
                }
            }
        }
    }
}
